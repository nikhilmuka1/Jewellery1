<!DOCTYPE html>
@model List<Project.Models.AllProduct>

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="row">
    <div class="col-lg-12" style="margin-top:2%">
        <h3 style="font-size: 200%; text-align: center; font-family: Verdana">Rings</h3>
    </div>
</div>

<div class="row text-center">

    @foreach (var ring in Model)
    {


        <div class="col-md-4 col-sm-6 hero-feature">
            <div class="thumbnail" align ="center" style="margin:30px" >
                <img src="@Url.Content(ring.Path)" alt="Image" width="220" height="250" style="margin:50px;align-items:center" />
                <div class="caption">

                    <p>
                        <label>@ring.Name</label> <br />
                        <label>@ring.Price</label>
                        <br />
                        <a href="~/User/Login" class="btn btn-primary">Buy Now</a>
                    </p>
                </div>
            </div>
      </div>

    }
</div>





