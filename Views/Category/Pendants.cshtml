
<!DOCTYPE html>

@model List<Project.Models.AllProduct>

@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
 
 }



<div class="row">
    <div class="col-lg-12" style="margin-top:2%">
        <h3 style="font-size: 200%; text-align: center; font-family: Verdana">Pandent</h3>
    </div>
</div>

<div class="row text-center">

    @foreach (var pandant in Model)
    {


        <div class="col-md-4 col-sm-4 hero-feature">
            <div class="thumbnail" align="center" style="margin:30px">
                <img src="@Url.Content(pandant.Path)" alt="Image" width="200" height="250" style="margin:20px" />
                <div class="caption">

                    <p>
                        <label>@pandant.Name</label> <br />
                        <label>@pandant.Price</label>
                        <br />
                        <a href="~/User/Login" class="btn btn-primary">Buy Now</a>
                    </p>
                </div>
            </div>
        </div>

    }
</div>





