<!DOCTYPE html>
@model List<Project.Models.AllProduct>
@{
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="row">
    <div class="col-lg-12" style="margin-top:2%">
        <h3 style="font-size: 200%; text-align: center; font-family: Verdana">Bracelet</h3>
    </div>
</div>
<div class="col-md-6" align="center">
    <img src="~/braclete/t1.jpg" alt="Image" width="300" height="390" style="margin:20px;align-items:center" />
    <img src="~/braclete/t2.jpg" alt="Image" width="300" height="390" style="margin:20px;align-items:center" />
</div>
<div class="row text-center">

    @foreach (var bracelete in Model)
    {


        <div class="col-md-4 col-sm-5 hero-feature">
            <div class="thumbnail" align="center" style="margin:30px">
                <img src="@Url.Content(bracelete.Path)" alt="Image" width="200" height="200" style="margin:20px" />
                <div class="caption">

                    <p>
                        <label>@bracelete.Name</label> <br />
                        <label>@bracelete.Price</label>
                        <br />
                        <a href="~/User/Login" class="btn btn-primary">Buy Now</a>
                    </p>
                </div>
            </div>
        </div>

    }
</div>





